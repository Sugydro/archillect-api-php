{
  "version": 2,
  "name": "api-archillect",
  "alias": "api-archillect",
  "builds": [
    { "src": "*.php", "use": "now-php" }
  ],
  "routes": [ 
    { "src": "/([^/]+)", "dest": "/index.php?method=$1" },
    { "src": "/(?<method>[^/]+)/(?<amount>[^/]+)", "dest": "/index.php?method=$method&amount=$amount" }
  ]
}
